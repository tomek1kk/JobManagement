@model JobManagement.Models.Position
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<br />
<br />
<div class="card card-body">
    <p>Position: @Model.PositionName </p>
    <br />
    <p>Location : @Model.Location </p>
    <br />
    <p>Salary : @Model.Salary </p>
    <br />
    <p>Description : @Model.Description </p>
    <br />
</div>


@Html.ActionLink("Edit", "Edit", "Position", new { id = Model.PositionID }, new { @class = "btn btn-primary" })