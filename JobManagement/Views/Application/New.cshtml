@model JobManagement.ViewModels.AddApplicationViewModel
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>

@using (Html.BeginForm("AddApplication", "Application", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(a => a.FirstName)
        @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.LastName)
        @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.PhoneNumber)
        @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Email)
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.Position,
            Model.Positions.Select(c => new SelectListItem {Text =c, Value =c}),
            new { @class = "form-control" })
    </div>

    <button type="submit">Submit</button>

    @Html.HiddenFor(a => a.Positions)
    @Html.HiddenFor(a => a.Id)
}
